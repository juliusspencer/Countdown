<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fullscreen_content"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000"
	android:gravity="center"
	android:orientation="vertical"
	tools:context="nz.co.jsatest.countdown.CountdownActivity">

	<ImageView
		android:id="@+id/event_imageview"
		android:layout_margin="24dp"
		android:visibility="gone"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<TextView
		android:id="@+id/days_textview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:gravity="center"
		android:textColor="@color/blue"
		android:textSize="@dimen/text_size"
		tools:text="3 days" />

	<LinearLayout
		android:id="@+id/timer_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">

		<TextView
			android:id="@+id/hours_textview"
			android:layout_width="0dp"
			android:layout_weight="2"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center|right"
			android:textColor="@color/red"
			android:textSize="@dimen/text_size"
			tools:text="02:" />
		<TextView
			android:id="@+id/minutes_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center"
			android:textColor="@color/yellow"
			android:textSize="@dimen/text_size"
			tools:text="01:" />
		<TextView
			android:id="@+id/seconds_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center"
			android:textColor="@color/blue"
			android:textSize="@dimen/text_size"
			tools:text="00:" />
		<TextView
			android:id="@+id/milliseconds_textview"
			android:layout_width="0dp"
			android:layout_weight="3"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:gravity="center|left"
			android:textColor="@color/green"
			android:textSize="@dimen/text_size"
			tools:text="123" />
	</LinearLayout>
</LinearLayout>
